<% provide(:button_text, '変更を送信する') %>

<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <h1 class="modal-title">【<%= @overtime.name %>からの残業申請】</h1>
    </div>

    <div class="modal-body">
      <div class="row">
        <div class="col-md-12">
          <%= form_with(model: @overtime, url: user_attendance_update_over_app_path(@user, @overtime.id), local: true, method: :patch) do |f| %>
           <table class="table table-bordered table-condensed table-hover table-striped" id="table-attendances">
            <thead>
              <tr>
                <th>日付</th>
                <th>曜日</th>
                <th>終了予定時間</th>
                <th>指定勤務終了時間</th>
                <th>時間外時間</th>
                <th>業務処理内容</th>
                <th>指示者確認㊞</th>
                <th>勤怠を確認する</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td><%= l(@overtime.worked_on, format: :short) %></td>
                <td class= "<%= css_class(@overtime.worked_on) %>"><%= $days_of_the_week[@overtime.worked_on.wday] %></td>
                <td><%= @overtime.endtime_at %></td>
                <td><%= format_basic_info(@user.designated_work_end_time) %></td>
                <td>
                  <% if day.endtime_at.present? && day.finished_at.present? %>
                    <%= format("%.2f", Time.at(work_end_time(day)).utc.strftime('%H')) %>
                  <% end %>
                </td>
                <td><%=  %></td>
                <td><%=  %></td>
                <td><%=  %></td>
              </tr>
            </tbody>
          </table>
          <div class="center">
            <%= f.submit yield(:button_text), class: "btn btn-primary btn-block" %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

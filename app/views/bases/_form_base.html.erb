<h1>拠点編集</h1>

<%= form_with(model: @base, local: true) do |f| %>
  <%= f.label :name, class: "label--edit" %>
  <%= f.text_field :name, class: "form-control" %>
  
  <%= f.label :email, class: "label--edit" %>
  <%= f.email_field :email, class:"form-control" %>
  
  <%= f.label :affiliation, class: "label--edit" %>
  <%= f.text_field :affiliation, class: "form-control" %>
  
  <%= f.submit "編集する", class: "btn btn-primary btn-block btn--edit" %>
<% end %>
<% provide(:title, @user.name) %>
<div class="container">
  <div>
    <table class="table table-bordered table-condensed user-table" id="table-attendances">
      <tr>
        <td>
          <%= link_to "←", user_path(date: @first_day.prev_month), class: "btn btn-primary" %>
          &emsp;&emsp;
          <%= l(@first_day, format: :middle) %>&emsp;時間管理表
          &emsp;&emsp;
          <%= link_to "→︎", user_path(date: @first_day.next_month), class: "btn btn-primary" %>
        </td>
        <td rowspam="2">
          指定勤務開始時間　<%= format_basic_info(@user.designated_work_start_time) %></br>
          指定勤務終了時間　<%= format_basic_info(@user.designated_work_end_time) %>
        </td>
        <td colspan="3"><%= format_basic_info(@user.basic_work_time) %>　基本時間</td>
        <td>初日　<%= l(@first_day, format: :short) %></td>
      </tr>
      
      <tr>
        <td>所属　<%= @user.affiliation.present? ? @user.affiliation : "未所属" %></td>
        <td>名前　<%= @user.name %></td>
        <td>コード</td>
        <td></td>
        <td>出勤日数　<%= @worked_sum %>日</td>
        <td>締め　<%= l(@last_day, format: :short) %></td>
      </tr>
    </table>
  </div>
  
  <% if logged_in? && current_user.superior? %>
      <div class="superior">
        <p class="notice">
          <%= link_to "【所属長承認申請のお知らせ】", "#", class: "superior_tag" %>
        </p>
        <p class="notice">
          <%= link_to "【勤怠変更申請のお知らせ】", "#", class: "superior_tag" %>
        </p>
        <% if current_user.superior? %>
          <p class="notice">
            <%= link_to "【残業申請のお知らせ】", "#", :style=>"color:red;", class: "superior_tag" %>
            <span><strong><%= "#{@notice_overtime_sum}件の通知があります" %></strong></span>
          </p>
        <% end %>
      </div>
  <% end %>
  
  <div class="btn-users-show">
    <span><%= link_to "勤怠を編集", attendances_edit_one_month_user_path(date: @first_day), class: "btn btn-primary" %></span>
    <span><%= link_to "CSV出力", csv_output_attendances_path(format: :csv), class: "btn btn-primary" %></span></br>
    <%= link_to "勤怠修正ログ（承認済）", attendances_attendance_edit_log_user_path(@user), class: "btn btn-primary" %>
  </div>
  
  <div>
    <table class="table table-bordered table-condensed table-hover table-striped" id="table-attendances">
      <thead>
        <tr>
          <th rowspan="3">残業申請</th>
          <th rowspan="3">日付</th>
          <th rowspan="3">曜日</th>
          <th colspan="7">【実績】</th>
          <th colspan="6">所定外勤務</th>
        </tr>
        <tr>
          <th colspan="3">出社</th>
          <th colspan="3">退社</th>
          <th rowspan="3">在社時間</th>
          <th rowspan="3">備考</th>
          <th colspan="2">終了予定時間</th>
          <th rowspan="2">時間外時間</th>
          <th rowspan="2">業務処理内容</th>
          <th rowspan="2">支持者確認㊞</th>
        </tr>
        <tr>
          <th>時</th>
          <th>分</th>
          <th></th>
          <th>時</th>
          <th>分</th>
          <th></th>
          <th>時</th>
          <th>分</th>
        </tr>
      </thead>
      
      <tbody>
        <% @attendances.each do |day| %>
          <tr>
            <td>
             <%= link_to "残業申請", user_attendance_edit_overtime_app_path(@user, day), remote: true, class: "btn btn-primary btn-md", date: day.worked_on %>
            </td>
            <td><%= l(day.worked_on, format: :short) %></td>
            <td class = "<%= css_class(day.worked_on) %>"><%= $days_of_the_week[day.worked_on.wday] %></td>
            <td><%= l(day.started_at, format: :hour) if day.started_at.present? %></td>
            <td><%= l(day.started_at.floor_to(60*15), format: :minute) if day.started_at.present? %></td>
            <td>
              <% if btn_text = attendance_state(day) %>
                <%= link_to "#{btn_text}", user_attendance_path(@user, day), method: :patch, class: "btn btn-primary btn-block" %>
              <% end %>
            </td>
            <td><%= l(day.finished_at, format: :hour) if day.finished_at.present? %></td>
            <td><%= l(day.finished_at.floor_to(60*15), format: :minute) if day.finished_at.present? %></td>
            <td></td>
            <td>
              <% if day.started_at.present? && day.finished_at.present? %>
                <%= str_times = working_time(day.started_at, day.finished_at) %>
                <% @total_working_time = @total_working_time.to_f + str_times.to_f %>
              <% end %>
            </td>
            <td><%= day.note %></td>
            <!-- 終了予定時間 -->
            <td>
              <% if day.tommorow_index == true %>
                <%= day.endtime_at.tomorrow.strftime("%H") if day.endtime_at.present? %>
              <% else %>
                <%= day.endtime_at.strftime("%H") if day.endtime_at.present? %>
              <% end %>
            </td>
            <td>
              <% if day.tommorow_index == true %>
                <%= day.endtime_at.tomorrow.strftime("%M") if day.endtime_at.present? %>
              <% else %>
                <%= day.endtime_at.strftime("%M") if day.endtime_at.present? %>
              <% end %>
            </td>
            <td>
              <% if day.endtime_at.present? && day.finished_at.present? %>
                <%= format("%.2f", Time.at(work_end_time(day)).utc.strftime('%H')) %>
              <% end %>
            </td>
            <td><%= day.try(:overtime_memo) %></td>
            <td><%= "申請中：#{day.name}" if day.name.present? %></td>
          </tr>
        <% end %>
      </tbody>
      
      <tfoot>
        <tr>
          <td rowspan="3"></td>
          <td colspan="2" rowspam="3"></td>
          <td colspan="6" rowspam="3"></td>
          <td rowspam="3"><%= format("%.2f", @total_working_time.to_f) %></td>
          <td colspan="5" rowspam="3"></td>
          <td>
            <div class="approval">
              所属長承認　未
              <div class="dropdown">
                 <!--切替ボタンの設定 -->
                <button type="button" class="btn btn-default btn-lg btn-block dropdown-toggle" id="dropdownMenuButton" 
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  <span class="caret pull-right"></span>
                </button>
               
                 <!--ドロップメニューの設定 -->
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                  <option><%= @user.name %></option>
                </div> 
              </div>
              <div>
                <%= link_to "申請", "#", class: "btn btn-primary btn-block btn-lg" %>
              </div>
            </div>
          </td>
        </tr>
      </tfoot>
    </table>
  </div>
</div>

<div id="edit_overtime_app" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>
<div id="edit_notice_overtime" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>

<% provide(:title, @user.name) %>
<div class="container">
  <div>
    <table class="table table-bordered table-condensed user-table" id="table-attendances">
      <tr>
        <td>
          <%= link_to "←", user_path(date: @first_day.prev_month), class: "btn btn-primary" %>
          &emsp;&emsp;
          <%= l(@first_day, format: :middle) %>&emsp;時間管理表
          &emsp;&emsp;
          <%= link_to "→︎", user_path(date: @first_day.next_month), class: "btn btn-primary" %>
        </td>
        <td rowspam="2">
          指定勤務開始時間　<%=  %></br>
          指定勤務終了時間　<%=  %>
        </td>
        <td colspan="3"><%= format_basic_info(@user.basic_time) %>　基本時間</td>
        <td>初日　<%= l(@first_day, format: :short) %></td>
      </tr>
      
      <tr>
        <td>所属　<%= @user.department.present? ? @user.department : "未所属" %></td>
        <td>名前　<%= @user.name %></td>
        <td>コード</td>
        <td></td>
        <td>出勤日数　<%= @worked_sum %>日</td>
        <td>締め　<%= l(@last_day, format: :short) %></td>
      </tr>
    </table>
  </div>
  
  <div>
    
  </div>
  
  <div class="btn-users-show">
    <span><%= link_to "勤怠を編集", attendances_edit_one_month_user_path(date: @first_day), class: "btn btn-primary" %></span>
    <span><%= link_to "CSV出力", "#", class: "btn btn-primary" %></span></br>
    <%= link_to "勤怠修正ログ（承認済）", "#", class: "btn btn-primary" %>
  </div>
  
  <div>
    <table class="table table-bordered table-condensed table-hover table-striped" id="table-attendances">
      <thead>
        <tr>
          <th rowspan="3">残業申請</th>
          <th rowspan="3">日付</th>
          <th rowspan="3">曜日</th>
          <th colspan="7">【実績】</th>
          <th colspan="6">所定外勤務</th>
        </tr>
        <tr>
          <th colspan="3">出社</th>
          <th colspan="3">退社</th>
          <th rowspan="3">在社時間</th>
          <th rowspan="3">備考</th>
          <th colspan="2">終了予定時間</th>
          <th rowspan="2">時間外時間</th>
          <th rowspan="2">業務処理内容</th>
          <th rowspan="2">支持者確認㊞</th>
        </tr>
        <tr>
          <th>時</th>
          <th>分</th>
          <th></th>
          <th>時</th>
          <th>分</th>
          <th></th>
          <th>時</th>
          <th>分</th>
        </tr>
      </thead>
      
      <tbody>
        <% @attendances.each do |day| %>
          <tr>
            <td></td>
            <td><%= l(day.worked_on, format: :short) %></td>
            <td class= "<%= css_class(day.worked_on) %>"><%= $days_of_the_week[day.worked_on.wday] %></td>
            <td><%= l(day.started_at, format: :hour) if day.started_at.present? %></td>
            <td><%= l(day.started_at.floor_to(60*15), format: :minute) if day.started_at.present? %></td>
            <td>
              <% if btn_text = attendance_state(day) %>
                <%= link_to "#{btn_text}", user_attendance_path(@user, day), method: :patch, class: "btn btn-primary btn-block" %>
              <% end %>
            </td>
            <td><%= l(day.finished_at, format: :hour) if day.finished_at.present? %></td>
            <td><%= l(day.finished_at.floor_to(60*15), format: :minute) if day.finished_at.present? %></td>
            <td></td>
            <td>
              <% if day.started_at.present? && day.finished_at.present? %>
                <%= str_times = working_time(day.started_at, day.finished_at) %>
                <% @total_working_time = @total_working_time.to_f + str_times.to_f %>
              <% end %>
              </td>
            <td><%= day.note %></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
          </tr>
        <% end %>
      </tbody>
      
      <tfoot>
        <tr>
          <td rowspan="3"></td>
          <td colspan="2" rowspam="3"></td>
          <td colspan="6" rowspam="3"></td>
          <td rowspam="3"><%= format("%.2f", @total_working_time.to_f) %></td>
          <td colspan="5" rowspam="3"></td>
          <td>
            <div class="dropdown">
              <!-- 切替ボタンの設定 -->
              <button type="button" class="btn btn-default dropdown-toggle" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                デフォルト
              </button>
              <!-- ドロップメニューの設定 -->
              <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <a class="dropdown-item" href="#">メニュー1</a>
                <a class="dropdown-item" href="#">メニュー2</a>
                <a class="dropdown-item" href="#">メニュー3</a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="#">その他リンク</a>
              </div><!-- /.dropdown-menu -->
            </div>
            <div>
              <%= link_to "申請", "#", class: "btn btn-primary btn-lg" %>
            </div>
          </td>
        </tr>
      </tfoot>
    </table>
  </div>
</div>